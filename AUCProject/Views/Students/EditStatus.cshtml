@model Auc.Common.ViewModels.Students.UpdateStatusVm
@{
    ViewBag.Title = "EditStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditStatus</h2>

<div class="row">
    <div class="container">
        @using (Html.BeginForm("EditStatus", "Students"))
        {
            @Html.HiddenFor(m=>m.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m=>m.Name,new {@class="form-control",@readonly="readonly" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.StatusId)
                @Html.DropDownListFor(m => m.StatusId, new SelectList(ViewBag.Status, "Id", "Name"), "Select Status", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.StatusId)
            </div>

            <button class="btn btn-success" type="submit">Save</button>
        }
    </div>
</div>

